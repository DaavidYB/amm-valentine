{
  "version": 2,
  "buildCommand": "pnpm run build",
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "dist/index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/server/server.js" 
    },
    {
      "src": "/assets/(.*)",
      "dest": "/dist/assets/$1"
    },
    {
      "src": "^(?!/api).*",
      "dest": "/dist/index.html"
    }
  ]
}
